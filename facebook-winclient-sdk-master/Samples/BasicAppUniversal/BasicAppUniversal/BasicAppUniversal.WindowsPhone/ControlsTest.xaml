<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicAppUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:Facebook.Client.Controls"
    x:Class="BasicAppUniversal.ControlsTest"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Controls:FriendPicker 
        x:Name="friendPicker" 
        AccessToken="{Binding Session.ActiveSession.CurrentAccessTokenData.AccessToken}"
        Margin="0,0"
            Height="100"
            Width="100"
            />
        

            <!-- login control -->
        <Controls:LoginButton 
                x:Name="loginButton" 
                Margin="0,580,10,10"
                HorizontalAlignment="Right"
                 />
        
    </Grid>
</Page>
